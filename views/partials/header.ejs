<!--js script-->
    <script>
        function flashEffect() {
            const button = document.querySelector('.check_button');
            button.style.backgroundColor = '#677885'; // Change to your desired flash color
            setTimeout(() => {
                button.style.backgroundColor = '#24323d'; // Reset to original color
            }, 200); // Adjust the duration (milliseconds) as needed
        }
    </script>
