  <body>
    <header>
    
      <div >  
        <h1 class="head"> My Book notes</h1>        
        <div class="search_bar">
          <form action="/check" method="post">
          <input type="text" name="search_text" class="search_input" placeholder="Enter the book name">         
          <button type="submit" class="check_button" onclick="flashEffect()">Check</button>
          </form>
        </div>
      </div>

    </header>
